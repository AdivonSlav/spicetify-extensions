{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"target": "ES2021",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"jsx": "react",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"lib": ["ES2021", "DOM"]
	},
	"exclude": ["featureshuffle/*", "songstats/*", "wikify/*", "writeify/*", "old-sidebar/*", "formatColors/*"]
}
